<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Skincare Products</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <h1>Skincare Products</h1>
  <a href="/products/new">+ Add New</a>
  <table>
    <thead>
      <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach((product, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= product.name %></td>
          <td><%= product.category %></td>
          <td><%= product.price %></td>
          <td><%= product.status %></td>
          <td>
            <a href="/products/<%= product._id %>">View</a>
            <a href="/products/<%= product._id %>/edit">Edit</a>
            <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
